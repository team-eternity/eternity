// Big number font - used only in special circumstances
font ee_bignumfont
{
   id            3
   start         '!'
   end           'Z'
   linesize      12
   spacesize     12
   tallestchar   12
   centerwidth   12
   uppercase     true
   blockcentered true

   patchnumoffset = 32
   
   filter { start '!'; end 'Z'; mask "FONTB%.2d" }
}

// Menu font - this is a special copy of the smallfont used by the menus;
// widthdelta is set to 1 to move the text closer together.
font ee_menufont
{
   id          5
   start       '!'
   end         0x7f
   linesize    8
   spacesize   4
   widthdelta  1
   tallestchar 8
   colorable   true
   uppercase   true
   
   filter { start '!'; end 0x7f; mask "STCFN%.3d" }
}

// Finale font - this is yet another copy of the smallfont, used by the finale.
// This one has a bigger linebreak step.
font ee_finalefont
{
   id          6
   start       '!'
   end         0x7f
   linesize    11
   spacesize   4
   tallestchar 8
   colorable   true
   uppercase   true
   
   filter { start '!'; end 0x7f; mask "STCFN%.3d" }
}

endif()

