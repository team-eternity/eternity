// fonts.edf - EDF File for Eternity Engine 3.35.92

// DOOM-only fonts.

ifgametype(DOOM)

// Small font - this is used by the HUD and V-system by default
font ee_smallfont
{
   id          = 0;
   start       = '!';
   end         = 0x7f;
   linesize    = 8;
   spacesize   = 4;
   tallestchar = 8;
   colorable   = true;
   uppercase   = true;
   
   filter { start = '!'; end = 0x7f; mask = "STCFN%.3d" }
}

// Big font - used by intermission and menus occasionally
font ee_bigfont
{
   id          2
   start       '!'
   end         'Z'
   linesize    12
   spacesize   8
   widthdelta  1
   tallestchar 12
   uppercase   true
   
   patchnumoffset 32
   
   filter { start '!'; end 'Z'; mask "FONTB%.2d" }
   
   colorable    true
   defaultcolor gray

   colortables
   {
      brick  "3=45,4=17,80=19,81:92=21:32,93=34,95:98=36:39,99=41,101=42,102:106=44:47,208=17"
      tan    "3=74,4=50,80:81=51,82=52,84:89=53:58,91:97=59:65,98:103=67:72,105:106=75:76,208=50"
      gray   "0:255=0:255"
      green  "3=123,4=112,80=113,81:82=114,84:89=115:117,91:92=118,93:95=119,97:99=120:122,101=122,102:103=123,105:106=125,208=112"
      brown  "3=75,4=60,80:83=61:62,84=63,85:90=64:66,91=67,92:95=68:69,96=70,97:100=70:73,101:102=74,103=75,105:106=76:78,208=60"
      gold   "3=165,4=160,80:83=228:229,84=229,85:88=230:231,89:100=161:164,100:105=165:166,106=167,208=160"
