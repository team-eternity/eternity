//=============================================================================
//
// Doom Marine Player Class
//

skin marine {}

playerclass DoomMarine
{
   defaultskin    marine
   thingtype      DoomPlayer
   altattackstate S_PLAY_ATK2
   superhealth    200

   weaponslot 1 { weapons : Chainsaw, Fist }
   weaponslot 2 { weapons : Pistol }
   weaponslot 3 { weapons : SuperShotgun, Shotgun }
   weaponslot 4 { weapons : Chaingun }
   weaponslot 5 { weapons : RocketLauncher }
   weaponslot 6 { weapons : PlasmaRifle }
   weaponslot 7 { weapons : BFG9000 }
   weaponslot 8 { weapons : Chainsaw }
   weaponslot 9 { weapons : SuperShotgun }

   rebornitem AmmoClip, 50
   rebornitem Fist
   rebornitem Pistol
}

//=============================================================================
//
// Weapon Info
//

weaponinfo DoomWeapon
{
  firstdecoratestate S_LIGHTDONE
  states
  @"
  LightDone:
    SHTG E 0 A_Light0
    stop
  "@
}

weaponinfo Fist : DoomWeapon, 0
{
  selectionorder 9.0

  flags        FLEEMELEE|NOHITGHOSTS|SILENCEABLE|DISABLEAPS|AUTOSWITCHFROM
  mod          Fist
  recoil       10.0

  firstdecoratestate S_PUNCH
  states
  @"
  Ready:
    PUNG A 1 A_WeaponReady
    loop
  Deselect:
    PUNG A 1 A_Lower
    loop
  Select:
    PUNG A 1 A_Raise
    loop
  Fire:
    PUNG B 4
    PUNG C 4 A_Punch
    PUNG D 5
    PUNG C 4
    PUNG B 5 A_ReFire
    goto Ready
  "@
}

weaponinfo Pistol : DoomWeapon, 1
{
  ammotype     AmmoClip
  ammouse      1

  selectionorder 8.0

  flags        SILENCEABLE|DISABLEAPS|AUTOSWITCHFROM
  mod          Pistol
  recoil       10.0
  hapticrecoil 1
  haptictime   1

  firstdecoratestate S_PISTOL
  states
  @"
  Ready:
    PISG A 1 A_WeaponReady
    loop
  Deselect:
    PISG A 1 A_Lower
    loop
  Select:
    PISG A 1 A_Raise
    loop
  Fire:
    PISG A 4
    PISG B 6 A_FirePistol
    PISG C 4
    PISG B 5 A_ReFire
    goto Ready
  Flash:
    PISF A 7 bright A_Light1
    goto LightDone
  "@
}

weaponinfo Shotgun : DoomWeapon, 2
{
  ammotype     AmmoShell
  ammouse      1

  selectionorder 4.0

  flags        SILENCEABLE|DISABLEAPS
  mod          Shotgun
  recoil       30.0
  hapticrecoil 3
  haptictime   3

  firstdecoratestate S_SGUN
  states
  @"
  Ready:
    SHTG A 1 A_WeaponReady
    loop
  Deselect:
    SHTG A 1 A_Lower
    loop
  Select:
    SHTG A 1 A_Raise
    loop
  Fire:
    SHTG A 3
    SHTG A 7 A_FireShotgun
    SHTG BC 5
    SHTG D 4
    SHTG CB 5
    SHTG A 3
    SHTG A 7 A_ReFire
    goto Ready
  Flash:
    SHTF A 4 bright A_Light1
    SHTF B 3 bright A_Light2
    goto LightDone
  "@
}

