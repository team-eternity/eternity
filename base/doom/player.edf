// MBF Old-BFG
weaponinfo OldBFG : BFG9000
{
  ammouse      1    // Only one ammo used per shot

  recoil       20.0 // Uses plasma's recoil

  firstdecoratestate S_OLDBFG1
  states
  @"
  OldFire:
    BFGG A 10 A_BFGSound
    BFGG BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB 1 A_FireOldBFG
    BFGG B 0 A_Light0
    BFGG B 20 A_ReFire
    goto Ready
  "@
}

weaponinfo Chainsaw : DoomWeapon, 7
{
  selectionorder 6.0

  flags        NOTHRUST|FLEEMELEE|NOHITGHOSTS|SILENCEABLE|DISABLEAPS
  mod          Chainsaw
  upsound      sawup
  readysound   sawidl

  firstdecoratestate S_SAW
  states
  @"
  Ready:
    SAWG CD 4 A_WeaponReady
    loop
  Deselect:
    SAWG C 1 A_Lower
    loop
  Select:
    SAWG C 1 A_Raise
    loop
  Fire:
    SAWG AB 4 A_Saw
    SAWG B 0 A_ReFire
    goto Ready
  "@
}

weaponinfo SuperShotgun : DoomWeapon, 8
{
  ammotype     AmmoShell
  ammouse      2

  selectionorder 2.0

  flags        SILENCEABLE|DISABLEAPS
  mod          SShotgun
  recoil       80.0
  hapticrecoil 5
  haptictime   5

  firstdecoratestate S_DSGUN
  states
  @"
  Ready:
    SHT2 A 1 A_WeaponReady
    loop
  Deselect:
    SHT2 A 1 A_Lower
    loop
  Select:
    SHT2 A 1 A_Raise
    loop
  Fire:
    SHT2 A 3
    SHT2 A 7 A_FireShotgun2
    SHT2 B 7
    SHT2 C 7 A_CheckReload
    SHT2 D 7 A_OpenShotgun2
    SHT2 E 7
    SHT2 F 7 A_LoadShotgun2
    SHT2 G 6
    SHT2 H 6 A_CloseShotgun2
    SHT2 A 5 A_ReFire
    goto Ready
  Unused:
    // unused states
    SHT2 B 7
    SHT2 A 3
    goto Deselect
  Flash:
    SHT2 I 4 bright A_Light1
    SHT2 J 4 bright A_Light2
    goto LightDone
  "@
}

