// The Base Weapon Class

weaponinfo Weapon
{
  states
  @"
  LightDone:
    TNT1 A 0 A_Light0
    stop
  "@
}

weaponinfo Unknown
{
  states
  @"
  Ready:
    TNT1 A 1 A_WeaponReady
    loop
  Deselect:
    TNT1 A 1 A_Lower
    loop
  Select:
    TNT1 A 1 A_Raise
    loop
  Fire:
    TNT1 A 1
    goto Ready
  "@
}

